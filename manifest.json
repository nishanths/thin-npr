{
  "manifest_version": 2,
  "name": "thin.npr.org improved",
  "version": "0.7",
  "description": "Improvements to browsing and accessing thin.npr.org",
  "author": "Nishanth Shanmugham",
  "content_scripts": [
    {
     "matches":    ["*://thin.npr.org/*", "*://text.npr.org/*"],
     "css":        ["general.css"]
    },
    {
      "matches":    [
        "*://thin.npr.org/", "*://thin.npr.org/t.php*", "*://thin.npr.org/p.php*",
        "*://text.npr.org/", "*://text.npr.org/t.php*", "*://text.npr.org/p.php*"
      ],
      "run_at":     "document_end",
      "js":         ["expanded-link.js"]
    },
    {
      "matches":    ["*://www.npr.org/*", "*://npr.org/*"],
      "run_at":     "document_end",
      "js":         ["to-thin.js"]
    }
  ]
}
